<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	 "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
	 
<hibernate-mapping>

	<class name="com.ecs.model.MessageRecord" table="messagerecord">
		<id name="id" column="id" type="integer">
			<generator class="native"></generator>
		</id>
		<property name="time" column="time" type="date"></property>
		<property name="topic" column="topic" type="string" length="100"></property>
		<property name="content" column="content" type="text"></property>
		<property name="sender" column="sender" type="string" length="20"></property>
		<property name="receiver" column="receiver" type="string" length="20"></property>
		
	</class>

</hibernate-mapping>
